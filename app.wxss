/**app.wxss**/
@import './style/weui.wxss';

.container {
  height: 100%;
  padding-top: 65px;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
  box-sizing: border-box;
}

.loading{
  display: flex;
  width: 100vw;
  height: 100vh;
  justify-content: center;
  align-items: center;
}

.right-arrow {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  right: 20rpx;
  transform: rotate(45deg);
  top: 50%;
  margin-top: -20rpx;
}

page{
    background-color: #F2f2f2;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.no_more{
  margin-bottom: 15px;
  font-size: 13px;
  color:red;
  text-align: center;
}