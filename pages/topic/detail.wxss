/* pages/topic/detail.wxss */
/*********************
 *
 * 专题缩略图
 * 
 *********************/
.topic_thumb {
  display: flex;
  flex-direction: row;
  height: 200px;
  width: 100%;
}
/*********************
 *
 * 所有课程层
 * 
 *********************/
 .topic_course {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:15px 10px 0px; 
  margin-top: 30px;
  background-color: #fff;
}
/**标题**/
.topic_course .topic_title {
  font-size: 16px;
  text-align: left;
}
/**列表**/
.topic_course .topic_list {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: -10px;
  margin-right: -10px;
}
/**列表项**/
.topic_list .topic_list_item {
  display: flex;
  flex-direction:row; 
  justify-content: space-between;
  padding:10px;
  border-bottom: 1px #F2f2f2 solid;
}
/**缩略图**/
.topic_list .thumb {
  width: 120px;
  height: 67px;
  padding-right: 10px;
}
/**课程信息**/
.topic_list .course_info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}
/**课程名**/
.course_info .course_name {
  font-size: 14px;
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow:ellipsis;
}
/**课程用户**/
.course_info .course_user {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
/**用户、用户组**/
.course_user .user,
.course_user .user_group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
/**图标**/
.course_user .user .user_icon,
.course_user .user_group .user_group_icon {
  width: 16px;
  height: 16px;
  padding-right: 5px;
}
/**昵称、用户数**/
.course_user .user .nickname,
.course_user .user_group .user_num {
  font-size: 12px;
  color: #999;
}